<main class="main">
  <div class="inner">
      <div class="card__wrapper">
      <% @motivations.each do |motivation| %>
       <%= link_to motivation_path(motivation.id) do %>
          <div class='content_post'>
          <%= image_tag motivation.image, class: "item-img" if motivation.image.attached?  %>
          <span class="name">
        <%= motivation.title %>
        <%= motivation.purchase_date %>
      </span>
    </div>
      <% end %>
    <% end %>
    </div>
  </div>
</main>