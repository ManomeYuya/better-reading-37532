<main class="main">
    <% if user_signed_in? %>
      <div class="greeting">
      <%= link_to "#{current_user.nickname}さん、ようこそ！" %>
      <p>読みたい本を投稿してみよう！</p>
      </div>
    <% end %>
  <div class="inner">
      <div class="card__wrapper">
      <% @motivations.each do |motivation| %>
       <%= link_to motivation_path(motivation.id) do %>
          <div class='content_post'>
          <%= image_tag motivation.image.variant(resize: '500x500'), class: "item-img" if motivation.image.attached?  %>
          <span class="name">
      </div>
      <% end %>
      <div class="detail">
        <div class="title">
          <%= "投稿者: #{motivation.user.nickname}" %>
        </div>
        <div class="title">
          <%= "タイトル: #{motivation.title}" %>
        </div>
        <div class="purchase_date">
          <%= "購入日: #{motivation.purchase_date}" %>
        </div>
        <div class="category">
          <%= "カテゴリー: #{motivation.category.name}" %>
        </div>
        </span>
         
      </div>
    
    <% end %>
    </div>
  </div>
</main>